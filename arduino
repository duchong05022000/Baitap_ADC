#include <Wire.h>
#include <LiquidCrystal_I2C.h>
LiquidCrystal_I2C lcd(0x27,16,2);
int motor=12;


void setup() {
  // put your setup code here, to run once:
  lcd.init();
  lcd.backlight();
  pinMode(motor,OUTPUT);
    lcd.setCursor(0,0);
    lcd.print("DO TINH YEU");
    delay(1000);
    lcd.clear();

}

void loop() {
  // put your main code here, to run repeatedly:
  int READ=analogRead(A0);
  float nhietdo=(5.0*READ*100.0/1024);
  lcd.clear();
  lcd.setCursor(1,0);
  lcd.print("nhiet do");
  lcd.setCursor(1,0);
  lcd.print(nhietdo);
 delay(3000);
  
  

}
